{
  "name": "react-starter",
  "version": "1.0.0",
  "repository": {
    "type": "git",
    "url": "git://github.com/sahat/react-starter.git"
  },
  "author": "Sahat Yalkabov",
  "license": "MIT",
  "scripts": {
    "postinstall": "npm run build:dll",
    "prebuild": "npm run build:clean && npm run testt",
    "build": "cross-env NODE_ENV=production webpack --config config/webpack.prod.babel.js --color -p --progress",
    "build:clean": "npm run test:clean && rimraf ./build",
    "build:dll": "cross-env --display-chunks --color --config config/webpack.dll.babel.js",
    "start": "cross-env NODE_ENV=development node server",
    "start:production": "npm run build && cross-env NODE_ENV=production node server",
    "lint": "npm run lint:js && npm run lint:css",
    "lint:js": "eslint . --ignore-path .gitignore --ignore-pattern internals/scripts",
    "lint:css": "stylelint ./app/**/*.css",
    "pretest": "npm run test:clean && npm run lint",
    "test:clean": "rimraf ./coverage",
    "testt": "echo 'TEST STUB'",
    "test": "cross-env NODE_ENV=test karma start internals/testing/karma.conf.js --single-run",
    "test:watch": "npm run test -- --auto-watch --no-single-run",
    "test:firefox": "npm run test -- --browsers Firefox",
    "test:safari": "npm run test -- --browsers Safari",
    "test:ie": "npm run test -- --browsers IE",
    "coveralls": "cat ./coverage/lcov/lcov.info | coveralls"
  },
  "dependencies": {
    "babel-polyfill": "6.13.0",
    "bootstrap": "^4.0.0-alpha.4",
    "chalk": "1.1.3",
    "classnames": "^2.2.5",
    "compression": "1.6.2",
    "cross-env": "^3.0.0",
    "express": "4.14.0",
    "history": "3.0.0",
    "jquery": "^3.1.0",
    "lodash": "4.15.0",
    "react": "15.3.0",
    "react-addons-create-fragment": "^15.3.2",
    "react-dom": "15.3.0",
    "react-helmet": "3.1.0",
    "react-icons": "^2.2.1",
    "react-lazyload": "^2.1.6",
    "react-paginate": "^2.2.3",
    "react-redux": "4.4.5",
    "react-router": "2.6.1",
    "react-router-scroll": "0.2.1",
    "redux": "3.5.2",
    "redux-thunk": "^2.1.0",
    "tether": "^1.3.7",
    "warning": "3.0.0",
    "whatwg-fetch": "1.0.0"
  },
  "devDependencies": {
    "babel-cli": "6.11.4",
    "babel-core": "6.13.2",
    "babel-eslint": "6.1.2",
    "babel-loader": "6.2.4",
    "babel-plugin-istanbul": "^2.0.1",
    "babel-plugin-react-transform": "2.0.2",
    "babel-preset-es2015": "6.16.0",
    "babel-preset-react": "6.11.1",
    "babel-preset-react-hmre": "1.1.1",
    "babel-preset-stage-0": "6.5.0",
    "chai": "3.5.0",
    "chai-enzyme": "0.5.0",
    "cheerio": "0.20.0",
    "coveralls": "2.11.12",
    "css-loader": "0.23.1",
    "enzyme": "2.4.1",
    "eslint": "3.3.0",
    "eslint-config-airbnb": "10.0.1",
    "eslint-import-resolver-webpack": "0.5.1",
    "eslint-plugin-import": "1.12.0",
    "eslint-plugin-jsx-a11y": "2.1.0",
    "eslint-plugin-react": "6.0.0",
    "eventsource-polyfill": "0.9.6",
    "expect": "1.20.2",
    "expect-jsx": "2.6.0",
    "exports-loader": "0.6.3",
    "extract-text-webpack-plugin": "1.0.1",
    "file-loader": "0.9.0",
    "html-loader": "0.4.3",
    "html-webpack-plugin": "2.22.0",
    "imports-loader": "0.6.5",
    "isparta": "4.0.0",
    "isparta-loader": "2.0.0",
    "json-loader": "0.5.4",
    "karma": "1.2.0",
    "karma-chrome-launcher": "1.0.1",
    "karma-coverage": "1.1.1",
    "karma-firefox-launcher": "1.0.0",
    "karma-ie-launcher": "1.0.0",
    "karma-mocha": "1.1.1",
    "karma-mocha-reporter": "2.1.0",
    "karma-safari-launcher": "1.0.0",
    "karma-sourcemap-loader": "0.3.7",
    "karma-webpack": "1.8.0",
    "lint-staged": "2.0.3",
    "mocha": "3.0.2",
    "node-sass": "^3.10.1",
    "null-loader": "0.1.1",
    "plop": "1.5.0",
    "postcss-cssnext": "2.7.0",
    "postcss-focus": "^1.0.0",
    "postcss-loader": "0.9.1",
    "pre-commit": "1.1.3",
    "rimraf": "2.5.4",
    "sass-loader": "^4.0.2",
    "shelljs": "0.7.3",
    "sinon": "2.0.0-pre",
    "style-loader": "0.13.1",
    "stylelint": "7.1.0",
    "stylelint-config-standard": "12.0.0",
    "url-loader": "0.5.7",
    "webpack": "2.1.0-beta.15",
    "webpack-dev-middleware": "1.6.1",
    "webpack-hot-middleware": "2.12.2"
  },
  "dllPlugin": {
    "exclude": [
      "chalk",
      "compression",
      "cross-env",
      "express",
      "minimist",
      "react-icons"
    ],
    "include": []
  },
  "babel": {
    "presets": [
      [
        "es2015",
        {
          "modules": false
        }
      ],
      "react",
      "stage-0"
    ]
  },
  "stylelint": {
    "extends": "stylelint-config-standard",
    "rules": {
      "font-family-name-quotes": "always-where-recommended",
      "indentation": 2
    }
  }
}
